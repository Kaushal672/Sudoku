{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
		"prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": { "jsx": true }
    },
    "plugins": ["@typescript-eslint", "react",  "prettier"],
    "rules": {
		"react/react-in-jsx-scope": "off"
	},
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
